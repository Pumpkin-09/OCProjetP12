    mock_creation_evenement.assert_not_called()


@patch('controleur.controleur_evenement.menu_choix')
@patch('controleur.controleur_evenement.affichage_evenements')
@patch('controleur.controleur_evenement.creation_evenement')
@patch('controleur.controleur_evenement.modification_evenement')
def test_choix_menu_evenement_quitter(
    mock_modification_evenement,
    mock_creation_evenement,
    mock_affichage_evenements,
    mock_menu_choix
):
    # Préparer les données
    mock_menu_choix.return_value = None  # Choix pour quitter le menu evenements

    # Appeler la fonction
    controleur_menu_evenement(None, None)

    # Vérifications
    mock_affichage_evenements.assert_not_called()
    mock_creation_evenement.assert_not_called()
    mock_modification_evenement.assert_not_called()
